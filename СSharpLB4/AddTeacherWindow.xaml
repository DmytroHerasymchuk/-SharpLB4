<Window x:Class="СSharpLB4.AddTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СSharpLB4"
        mc:Ignorable="d"
        Title="AddTeacherWindow" Height="300" Width="500" FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Enter Name:" Margin="10"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Enter Surname:" Margin="10"/>
        <TextBox x:Name="NameTB" Grid.Row="0" Grid.Column="1"/>
        <TextBox x:Name="SurnameTB" Grid.Row="1" Grid.Column="1"/>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Content="Add" Margin="20" Width="75" Click="Button_Click"/>
            <Button Content="Remove" Margin="20" Width="75"/>
        </StackPanel>
    </Grid>
    
</Window>
