<Window x:Class="СSharpLB4.Views.AddTeacherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СSharpLB4"
        mc:Ignorable="d"
        Title="AddTeacherWindow" Height="250" Width="400" FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Enter Name:" Margin="10" VerticalAlignment="Top"/>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Enter Surname:" Margin="10" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTB" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <TextBox x:Name="SurnameTB" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>
        <Button Grid.Column="1" Grid.RowSpan="2" Content="Add" Height="30" Width="100" Click="Button_Click"/>
    </Grid>
    
</Window>
