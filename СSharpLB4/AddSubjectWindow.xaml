<Window x:Class="СSharpLB4.AddSubjectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:СSharpLB4"
        mc:Ignorable="d"
        Title="AddSubjectWindow" Height="250" Width="400" FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock VerticalAlignment="Top" Text="Enter Name of Subject:" Margin="5"/>
        <TextBox x:Name="NameTB" Grid.Column="0" Height="30" Margin="5" />
        <Button Grid.Column="1" Content="Add" Height="30" Width="100" Click="Button_Click"/>

    </Grid>
</Window>
